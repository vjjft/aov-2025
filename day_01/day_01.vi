

pub fn main(&io: &IO) {
  let input = io.full_input();

  let turn_ = input.split("\n");

  // { turns: turn_.len() }.dbg();

  let delta_ = turn_.map(fn* (turn: String) {
    let Some(dir, num) = turn!.head_tail() else { +0 };
    let Some(n) = N32::parse(String(num)) else { +0 };
    if dir == 'L' {
      -n
    } else {
      +n
    }
  });

  let position = 50;
  let running = position;
  let hits = 0;
  let passes = 0;

  for delta in delta_.iter() {
    let spins = delta.abs() as N32 / 100;
    passes += spins;

    let start = position;
    let temp = position as I32;

    temp += delta % +100;

    if start != 0 {
      if temp <= +0 {
        passes += 1
      }

      if temp >= +100 {
        passes += 1;
      }
    }

    position = ((temp + +100) % +100) as N32;

    if (position == 0) {
      hits += 1;
    }
    // (start, delta, spins, temp, position, (hits, passes)).dbg();
  };

  let part1 = hits;
  io.println("Part 1: {part1}");

  let part2 = passes;
  io.println("Part 2: {part2}");
}
